<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:foreground="?android:attr/selectableItemBackground"
    style="@style/CardViewSemiDark"
    card_view:contentPadding="0dp" >

    <net.mononz.paragon.library.SquareRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <ImageView
            android:id="@+id/portrait"
            android:contentDescription="@string/description_hero_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:foreground="@drawable/scrim" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/default_card_padding">

            <TextView
                android:id="@+id/type"
                android:layout_width="match_parent"
                style="@style/AccentedSubhead"
                tools:text="Ranger" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/HeroTitle"
                tools:text="Murdock"/>

        </LinearLayout>

    </net.mononz.paragon.library.SquareRelativeLayout>

</android.support.v7.widget.CardView>