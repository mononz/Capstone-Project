<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/padding_horizontal"
    android:paddingLeft="@dimen/padding_horizontal"
    android:paddingEnd="@dimen/padding_horizontal"
    android:paddingRight="@dimen/padding_horizontal">

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_detail_top" />

    <include layout="@layout/nest_first" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CardViewSemiDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Headline"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_gravity="center_horizontal"
                android:text="Affinities" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_affinities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CardViewSemiDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Headline"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_gravity="center_horizontal"
                android:text="Basic Stats" />

            <android.support.v7.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_horizontal"
                android:paddingStart="@dimen/padding_horizontal"
                android:paddingRight="@dimen/padding_horizontal"
                android:paddingEnd="@dimen/padding_horizontal"
                app:columnCount="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/text_title_2"
                    android:text="Basic Attack Power"
                    android:padding="8dp" />

                <ProgressBar
                    android:id="@+id/trait_1_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="8dp"
                    android:progressDrawable="@drawable/custom_progress"
                    app:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:layout_gravity="center_vertical"
                    tools:progress="6"
                    android:max="10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/text_title_2"
                    android:text="Ability Attack Power"
                    android:padding="8dp" />

                <ProgressBar
                    android:id="@+id/trait_2_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="8dp"
                    android:progressDrawable="@drawable/custom_progress"
                    app:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:layout_gravity="center_vertical"
                    tools:progress="7"
                    android:max="10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/text_title_2"
                    android:text="Durability"
                    android:padding="8dp" />

                <ProgressBar
                    android:id="@+id/trait_3_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="8dp"
                    android:progressDrawable="@drawable/custom_progress"
                    app:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:layout_gravity="center_vertical"
                    tools:progress="9"
                    android:max="10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/text_title_2"
                    android:text="Mobility"
                    android:padding="8dp" />

                <ProgressBar
                    android:id="@+id/trait_4_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="8dp"
                    android:progressDrawable="@drawable/custom_progress"
                    app:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:layout_gravity="center_vertical"
                    tools:progress="4"
                    android:max="10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/text_title_2"
                    android:text="Difficulty"
                    android:padding="8dp" />

                <ProgressBar
                    android:id="@+id/trait_5_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="8dp"
                    android:progressDrawable="@drawable/custom_progress"
                    app:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:layout_gravity="center_vertical"
                    tools:progress="3"
                    android:max="10" />

            </android.support.v7.widget.GridLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CardViewSemiDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Headline"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_gravity="center_horizontal"
                android:text="Abilities" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_abilities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>