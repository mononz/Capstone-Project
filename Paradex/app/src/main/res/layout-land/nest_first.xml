<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="@integer/nested_first_weight_left"
        style="@style/CardViewSemiDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/type_text"
                style="@style/DetailSubhead"
                tools:text="Ranger" />

            <ImageView
                android:id="@+id/type_image"
                android:contentDescription="@string/app_name"
                style="@style/ImageAttackType" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="@integer/nested_first_weight_right"
        style="@style/CardViewSemiDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/include_hero_info" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>